@model databaseHempPlantations.Models.Trip

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Trip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Trip ID
        </dt>
        <dd class="col-sm-10">
            @Model.TripID
        </dd>

        <dt class="col-sm-2">
            Harvest
        </dt>
        <dd class="col-sm-10">
            @Model.Harvest.HarvestID
        </dd>

        <dt class="col-sm-2">
            Agronomist
        </dt>
        <dd class="col-sm-10">
            @Model.Agronomist.AgronomistID
        </dd>

        <dt class="col-sm-2">
            Trip Date
        </dt>
        <dd class="col-sm-10">
            @Model.TripDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">
            Destination
        </dt>
        <dd class="col-sm-10">
            @Model.Destination
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TripID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
