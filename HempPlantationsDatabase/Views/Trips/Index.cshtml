@model IEnumerable<databaseHempPlantations.Models.Trip>

<!DOCTYPE html>
<html>
<head>
    <title>Trips</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
        a{
            margin: 10 px 0;
        }
    </style>
    <a href="@Url.Action("Create", "Trips")" class="list-group-item list-group-item-action btn btn-primary">Create</a>
</head>
<body>
    <h2>Trips</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <p><strong>ID:</strong> @item.TripID</p>
            <p><strong>Agronomist ID:</strong> @item.AgronomistID</p>
            <p><strong>Harvest ID:</strong> @item.HarvestID</p>
            <p><strong>Trip Date:</strong> @item.TripDate.ToShortDateString()</p>
            <p><strong>Destination:</strong> @item.Destination</p>
            <!-- Add other fields as needed -->
            <!-- Edit Button -->
            <p href="@Url.Action("Edit", "Trips", new { id = item.TripID })" class="btn btn-primary edit-button">Edit</p>
            <a href="@Url.Action("Delete", "Trips", new { id = item.TripID })" class="btn btn-primary edit-button">Delete</a>
        </div>
    }
</body>
</html>
