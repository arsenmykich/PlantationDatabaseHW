@model databaseHempPlantations.Models.TastingReview

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TastingReview</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            TastingReview ID
        </dt>
        <dd class="col-sm-10">
            @Model.TastingReviewID
        </dd>

        <dt class="col-sm-2">
            Tasting
        </dt>
        <dd class="col-sm-10">
            @Model.Tasting.TastingID
        </dd>

        <dt class="col-sm-2">
            Review
        </dt>
