@model databaseHempPlantations.Models.TastingReview

@{
    ViewData["Title"] = "Edit TastingReview";
}

<h1>Edit TastingReview</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="TastingReviewID" />

    <div class="form-group">
        <label asp-for="ReviewID" class="control-label">Review</label>
        <select asp-for="ReviewID" class="form-control" asp-items="ViewBag.ReviewID"></select>
        <span asp-validation-for="ReviewID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TastingID" class="control-label">Tasting</label>
        <select asp-for="TastingID" class="form-control" asp-items="ViewBag.TastingID"></select>
        <span asp-validation-for="TastingID" class="text-danger"></span>
    </div>

    <!-- Add more form groups for other properties -->

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to TastingReview List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
