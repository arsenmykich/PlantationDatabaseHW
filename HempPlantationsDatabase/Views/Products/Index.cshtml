@model IEnumerable<databaseHempPlantations.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
    </style>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</head>
<body>
    <h2>Products</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <h3>@item.ProductName</h3>
            <p><strong>ID:</strong> @item.ProductID</p>
            <p><strong>Price:</strong> @item.Price</p>
            <p><strong>Description:</strong> @item.Description</p>
            <!-- Add other fields as needed -->
            <!-- Edit Button -->
            <a href="@Url.Action("Edit", "Products", new { id = item.ProductID })" class="btn btn-primary edit-button">Edit</a>
            <a href="@Url.Action("Delete", "Products", new { id = item.ProductID })" class="btn btn-primary edit-button" style="margin-top: 5px;">Delete</a>
        </div>
    }
</body>
</html>
