@model databaseHempPlantations.Models.Tasting

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tasting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tasting ID
        </dt>
        <dd class="col-sm-10">
            @Model.TastingID
        </dd>

        <dt class="col-sm-2">
            Consumer
        </dt>
        <dd class="col-sm-10">
            @Model.Consumer.FullName
        </dd>

        <dt class="col-sm-2">
            Agronomist
        </dt>
        <dd class="col-sm-10">
            @Model.Agronomist.FullName
        </dd>

        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Model.Product.ProductName
        </dd>

        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>

        <dt class="col-sm-2">
            Tasting Date
        </dt>
        <dd class="col-sm-10">
            @Model.TastingDate
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TastingID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
