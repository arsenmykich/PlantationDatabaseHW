@model databaseHempPlantations.Models.Tasting

@{
    ViewData["Title"] = "Edit Tasting";
}

<h1>Edit Tasting</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="TastingID" />

    <div class="form-group">
        <label asp-for="ConsumerID" class="control-label">Consumer</label>
        <select asp-for="ConsumerID" class="form-control" asp-items="ViewBag.ConsumerID"></select>
        <span asp-validation-for="ConsumerID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AgronomistID" class="control-label">Agronomist</label>
        <select asp-for="AgronomistID" class="form-control" asp-items="ViewBag.AgronomistID"></select>
        <span asp-validation-for="AgronomistID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductID" class="control-label">Product</label>
        <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TastingDate" class="control-label">Tasting Date</label>
        <input asp-for="TastingDate" type="datetime" class="form-control" />
        <span asp-validation-for="TastingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">Rating</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Add more form groups for other properties -->

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to Tasting List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
