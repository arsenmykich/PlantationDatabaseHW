@model IEnumerable<databaseHempPlantations.Models.Return>

<!DOCTYPE html>
<html>
<head>
    <title>Returns</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
    </style>
    <a href="@Url.Action("Create", "Returns")" class="list-group-item list-group-item-action btn btn-primary">Create</a>
</head>
<body>
    <h2>Returns</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <p><strong>ID:</strong> @item.ReturnID</p>
            <p><strong>Consumer ID:</strong> @item.ConsumerID</p>
            <p><strong>Agronomist ID:</strong> @item.AgronomistID</p>
            <p><strong>Product ID:</strong> @item.ProductID</p>
            <p><strong>Return Date:</strong> @item.ReturnDate.ToShortDateString()</p>
            <p><strong>Quantity:</strong> @item.Quantity</p>
            <!-- Add other fields as needed -->
            <!-- Edit Button -->
            <a href="@Url.Action("Edit", "Returns", new { id = item.ReturnID })" class="btn btn-primary edit-button">Edit</a>
        </div>
    }
</body>
</html>
