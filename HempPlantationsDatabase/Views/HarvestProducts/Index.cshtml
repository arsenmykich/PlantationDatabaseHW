@model IEnumerable<databaseHempPlantations.Models.HarvestProduct>

<!DOCTYPE html>
<html>
<head>
    <title>Harvest Products</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
    </style>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</head>
<body>
    <h2>Harvest Products</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <p><strong>ID:</strong> @item.HarvestProductID</p>
            <p><strong>Harvest ID:</strong> @item.HarvestID</p>
            <p><strong>Product ID:</strong> @item.ProductID</p>
            <p><strong>Quantity:</strong> @item.Quantity</p>
            <!-- Add other fields as needed -->
            <!-- Edit Button -->
            <a href="@Url.Action("Edit", "HarvestProducts", new { id = item.HarvestProductID })" class="btn btn-primary edit-button">Edit</a>

        </div>
    }
</body>
</html>
