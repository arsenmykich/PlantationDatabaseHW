@model databaseHempPlantations.Models.HarvestProduct

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Harvest Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Harvest Product ID
        </dt>
        <dd class="col-sm-10">
            @Model.HarvestProductID
        </dd>

        <dt class="col-sm-2">
            Harvest
        </dt>
        <dd class="col-sm-10">
            @Model.Harvest.HarvestID
        </dd>

        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Model.Product.ProductID
        </dd>

        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="HarvestProductID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
