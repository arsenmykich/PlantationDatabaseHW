@model databaseHempPlantations.Models.HarvestProduct

@{
    ViewData["Title"] = "Edit HarvestProduct";
}

<h1>Edit HarvestProduct</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="HarvestProductID" />

    <div class="form-group">
        <label asp-for="HarvestID" class="control-label">Harvest ID</label>
        <select asp-for="HarvestID" class="form-control" asp-items="ViewBag.HarvestID"></select>
        <span asp-validation-for="HarvestID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductID" class="control-label">Product ID</label>
        <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Add more form groups for other properties -->

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to HarvestProduct List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
