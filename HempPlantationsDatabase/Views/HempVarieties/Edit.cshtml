@model databaseHempPlantations.Models.HempVariety

@{
    ViewData["Title"] = "Edit HempVariety";
}

<h1>Edit HempVariety</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="VarietyID" />

    <div class="form-group">
        <label asp-for="VarietyName" class="control-label">Variety Name</label>
        <input asp-for="VarietyName" class="form-control" />
        <span asp-validation-for="VarietyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Add more form groups for other properties -->

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to HempVariety List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
