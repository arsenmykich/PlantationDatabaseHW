@model databaseHempPlantations.Models.HempVariety

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Hemp Variety</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Variety ID
        </dt>
        <dd class="col-sm-10">
            @Model.VarietyID
        </dd>

        <dt class="col-sm-2">
            Variety Name
        </dt>
        <dd class="col-sm-10">
            @Model.VarietyName
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="VarietyID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
