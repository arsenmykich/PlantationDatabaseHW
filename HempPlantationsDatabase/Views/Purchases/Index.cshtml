@model IEnumerable<databaseHempPlantations.Models.Purchase>

<!DOCTYPE html>
<html>
<head>
    <title>Purchases</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
    </style>
    <a href="@Url.Action("Create", "Purchases")" class="list-group-item list-group-item-action btn btn-primary">Create</a>
</head>
<body>
    <h2>Purchases</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <p><strong>ID:</strong> @item.PurchaseID</p>
            <p><strong>Consumer ID:</strong> @item.ConsumerID</p>
            <p><strong>Agronomist ID:</strong> @item.AgronomistID</p>
            <p><strong>Product ID:</strong> @item.ProductID</p>
            <p><strong>Purchase Date:</strong> @item.PurchaseDate.ToShortDateString()</p>
            <p><strong>Quantity:</strong> @item.Quantity</p>
            <p><strong>Total Price:</strong> @item.TotalPrice</p>
            <!-- Add other fields as needed -->
            <!-- Edit Button -->
            <a href="@Url.Action("Edit", "Purchases", new { id = item.PurchaseID })" class="btn btn-primary edit-button">Edit</a>
            <a href="@Url.Action("Delete", "Purchases", new { id = item.PurchaseID })" class="btn btn-primary edit-button" style="margin-top: 5px;">Delete</a>
        </div>
    }
</body>
</html>
