@model databaseHempPlantations.Models.Purchase

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Purchase ID
        </dt>
        <dd class="col-sm-10">
            @Model.PurchaseID
        </dd>

        <dt class="col-sm-2">
            Consumer
        </dt>
        <dd class="col-sm-10">
            @Model.Consumer.FullName
        </dd>

        <dt class="col-sm-2">
            Agronomist
        </dt>
        <dd class="col-sm-10">
            @Model.Agronomist.FullName
        </dd>

        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Model.Product.ProductName
        </dd>

        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>

        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PurchaseID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
