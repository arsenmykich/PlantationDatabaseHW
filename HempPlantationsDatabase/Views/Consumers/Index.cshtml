@model IEnumerable<databaseHempPlantations.Models.Consumer>

<!DOCTYPE html>
<html>
<head>
    <title>Consumers</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
    </style>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</head>
<body>
    <h2>Consumers</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <h3>@item.FirstName @item.LastName</h3>
            <p><strong>ID:</strong> @item.ConsumerID</p>
            <p><strong>Email:</strong> @item.Email</p>
            <p><strong>Phone number:</strong> @item.PhoneNumber</p>
            <p><strong>Registration date:</strong> @item.RegistrationDate.ToShortDateString()</p>

            <!-- Edit Button -->
            <a href="@Url.Action("Edit", "Consumers", new { id = item.ConsumerID })" class="btn btn-primary edit-button">Edit</a>

        </div>
    }
</body>
</html>
