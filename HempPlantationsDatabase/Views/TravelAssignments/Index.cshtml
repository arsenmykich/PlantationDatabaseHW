@model IEnumerable<databaseHempPlantations.Models.TravelAssignment>

<!DOCTYPE html>
<html>
<head>
    <title>Travel Assignments</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
    </style>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</head>
<body>
    <h2>Travel Assignments</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <p><strong>ID:</strong> @item.TravelAssignmentID</p>
            <p><strong>Agronomist ID:</strong> @item.AgronomistID</p>
            <p><strong>Trip ID:</strong> @item.TripID</p>
            <!-- Add other fields as needed -->
            <!-- Edit Button -->
            <p href="@Url.Action("Edit", "TravelAssignments", new { id = item.TravelAssignmentID })" class="btn btn-primary edit-button">Edit</p>
            <a href="@Url.Action("Delete", "TravelAssignments", new { id = item.TravelAssignmentID })" class="btn btn-primary edit-button" style="margin-top: 5px;">Delete</a>
        </div>
    }
</body>
</html>
