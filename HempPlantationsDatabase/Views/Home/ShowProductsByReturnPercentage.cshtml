@model IEnumerable<ProductPurchaseViewModel>

<h1>Products by Return Percentage</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Customer Count</th>
            <th>Return Customer Count</th>
            <th>Return Percentage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.CustomerCount</td>
                <td>@product.ReturnCustomerCount</td>
                <td>@product.ReturnPercentage.ToString("0.00")%</td>
            </tr>
        }
    </tbody>
</table>
