@model IEnumerable<databaseHempPlantations.Models.Agronomist>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agronomists for Travel Assignments</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Agronomists for Travel Assignments</h1>

    <table>
        <thead>
            <tr>
                <th>Agronomist ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Hire Date</th>
                <th>Specialty</th>
                <!-- Додайте інші необхідні поля -->
            </tr>
        </thead>
        <tbody>
            @foreach (var agronomist in Model)
            {
                <tr>
                    <td>@agronomist.AgronomistID</td>
                    <td>@agronomist.FirstName</td>
                    <td>@agronomist.LastName</td>
                    <td>@agronomist.Email</td>
                    <td>@agronomist.PhoneNumber</td>
                    <td>@agronomist.HireDate.ToString("yyyy-MM-dd")</td>
                    <td>@agronomist.Specialty</td>
                    <!-- Додайте вивід інших полів, якщо потрібно -->
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index">Back to Main Menu</a>
</body>
</html>
