@model IEnumerable<databaseHempPlantations.Models.Tasting>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Common Tastings</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Common Tastings</h1>

    <table>
        <thead>
            <tr>
                <th>Tasting ID</th>
                <th>Agronomist ID</th>
                <th>Consumer ID</th>
                <th>Product ID</th>
                <th>Tasting Date</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tasting in Model)
            {
                <tr>
                    <td>@tasting.TastingID</td>
                    <td>@tasting.AgronomistID</td>
                    <td>@tasting.ConsumerID</td>
                    <td>@tasting.ProductID</td>
                    <td>@tasting.TastingDate.ToString("yyyy-MM-dd")</td>
                    <td>@tasting.Rating</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index">Back to Main Menu</a>
</body>
</html>
