@model IEnumerable<databaseHempPlantations.Models.Consumer>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Consumers with Distinct Products</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Consumers with Distinct Products</h1>

    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Registration Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consumer in Model)
            {
                <tr>
                    <td>@consumer.ConsumerID</td>
                    <td>@consumer.FirstName</td>
                    <td>@consumer.LastName</td>
                    <td>@consumer.Email</td>
                    <td>@consumer.PhoneNumber</td>
                    <td>@consumer.RegistrationDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index">Back to Main Menu</a>
</body>
</html>
