@model IEnumerable<databaseHempPlantations.Models.Harvest>

<!DOCTYPE html>
<html>
<head>
    <title>Harvests</title>
    <style>
        /* Add your styling here */
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
        }

        p {
            margin: 5px 0;
        }
    </style>

    <a href="@Url.Action("Create", "Harvests")" class="list-group-item list-group-item-action btn btn-primary">Create</a>
</head>
<body>
    <h2>Harvests</h2>

    @foreach (var item in Model)
    {
        <div class="card">
            <p><strong>ID:</strong> @item.HarvestID</p>
            <p><strong>Agronomist ID:</strong> @item.AgronomistID</p>
            <p><strong>Variety ID:</strong> @item.VarietyID</p>
            <p><strong>Harvest Date:</strong> @item.HarvestDate.ToShortDateString()</p>
            <p><strong>Quantity:</strong> @item.Quantity</p>
            <!-- Add other fields as needed -->

            <!-- Edit Button -->
            <a href="@Url.Action("Edit", "Harvests", new { id = item.HarvestID })" class="btn btn-primary edit-button">Edit</a>
            <a href="@Url.Action("Delete", "Harvests", new { id = item.HarvestID })" class="btn btn-primary edit-button" style="margin-top: 5px;">Delete</a>

        </div>
    }
</body>
</html>
